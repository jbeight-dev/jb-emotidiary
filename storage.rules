rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 음성 파일은 해당 자녀의 부모만 접근 가능
    match /audio/{childId}/{fileName} {
      allow read, write: if request.auth != null
        && isParentOfChild(childId);
    }

    // 프로필 이미지
    match /profiles/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // 헬퍼 함수
    function isParentOfChild(childId) {
      return firestore.get(/databases/(default)/documents/children/$(childId)).data.parentId == request.auth.uid;
    }
  }
}
